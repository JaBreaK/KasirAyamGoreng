<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_detail_customer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelanggan:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Daffa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_customer_label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_customer_wa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="089525141148"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_customer_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 58.000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/tv_detail_customer_label"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_status_bayar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="BELUM_BAYAR"
            android:padding="8dp"
            android:background="#FFCDD2"
            android:textColor="#D32F2F"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_customer_wa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_detail_status_pesanan"/>

        <TextView
            android:id="@+id/tv_detail_status_pesanan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="PESANAN_DITERIMA"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="#C8E6C9"
            android:textColor="#388E3C"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_detail_status_bayar"
            app:layout_constraintStart_toEndOf="@id/tv_detail_status_bayar"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_items_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item yang Dipesan:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_status_bayar"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_items_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_items_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_order_detail"
            tools:itemCount="3"/>

        <LinearLayout
            android:id="@+id/layout_bukti_bayar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/rv_order_items_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bukti Pembayaran:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_lihat_bukti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lihat Bukti Ter-upload"
                    android:visibility="gone"
                    tools:visibility="visible"
                    style="?attr/materialButtonOutlinedStyle" />

                <Button
                    android:id="@+id/btn_upload_bukti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload Bukti Baru"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_bukti_preview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:background="#f0f0f0"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_update_bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Status Pembayaran:"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_bukti_bayar"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinner_status_bayar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintTop_toBottomOf="@id/label_update_bayar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/label_update_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Status Pesanan:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_status_bayar"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinner_status_pesanan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintTop_toBottomOf="@id/label_update_pesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_update_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Simpan Perubahan Status"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_status_pesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>